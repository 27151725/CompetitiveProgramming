#include <iostream>

using namespace std;

// https://practice.geeksforgeeks.org/problems/trapping-rain-water/0
void print_total_unit_water(int values[], int size)
{
    int i = 0;
    int total_unit_water = 0;
    while (i<size-1){
       int begin = values[i];
       //int temp_sum = 0;
       //int indexes = 0;
       while (begin>=values[i+1] and i<size-1){
           //temp_sum += values[i+1];
           total_unit_water += begin-values[i+1];
           //indexes++;
           i++;
       }
       i++;
    }
    std::cout << total_unit_water << std::endl;
}

int main()
{
    int num_test_cases = 0;
    std::cin >> num_test_cases;
    for (int i = 0; i < num_test_cases; i++) {
        int size = 0; // size of i th test case
        std::cin >> size;
        int values[size]; // array of elements of i th test case
        int value = 0;
        for (int j = 0; j < size; j++) {
            std::cin >> value;
            values[j] = value;
        }
        print_total_unit_water(values, size);
    }
    return 0;
}
